        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TerceiraTela">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" tools:layout_editor_absoluteY="1dp" tools:layout_editor_absoluteX="1dp"
            android:gravity="center">
        <TextView
                android:text="trceira telae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"
        />
        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/buttaoterceiratela"
        />
